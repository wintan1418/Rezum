<div class="min-h-full">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  <% end %>

  <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8"><div class="min-h-full">
  <main class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="px-4 py-6 sm:px-0 text-center">
      <h1 class="text-3xl font-bold text-gray-900">Choose Your Plan</h1>
      <p class="mt-2 text-gray-600">Upgrade to unlock unlimited AI-powered job applications</p>
    </div>

    <!-- Plans -->
    <div class="px-4 sm:px-0">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-3xl mx-auto">
        <% @plans.each do |plan| %>
          <div class="<%= plan[:interval] == 'year' ? 'border-2 border-purple-400 relative' : 'border border-gray-200' %> rounded-lg bg-white shadow-lg">
            <% if plan[:interval] == 'year' %>
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-600 text-white">
                  Most Popular
                </span>
              </div>
            <% end %>

            <div class="p-8">
              <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900"><%= plan[:name] %></h3>
                
                <div class="mt-4">
                  <span class="text-4xl font-bold text-gray-900">$<%= plan[:price] %></span>
                  <span class="text-gray-500">/<%= plan[:interval] %></span>
                </div>
                
                <% if plan[:interval] == 'year' %>
                  <p class="mt-2 text-sm text-green-600 font-medium">
                    Save $58 per year (2 months free!)
                  </p>
                <% end %>
              </div>

              <!-- Features -->
              <ul class="mt-8 space-y-4">
                <% plan[:features].each do |feature| %>
                  <li class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-gray-700"><%= feature %></span>
                  </li>
                <% end %>
              </ul>

              <!-- CTA -->
              <%= form_with model: @subscription, url: subscriptions_path, method: :post, local: true, class: "mt-8" do |f| %>
                <%= hidden_field_tag :plan_id, plan[:id] %>
                <%= f.submit "Choose #{plan[:name]}", 
                    class: "w-full px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white #{ plan[:interval] == 'year' ? 'bg-purple-600 hover:bg-purple-700 focus:ring-purple-500' : 'bg-blue-600 hover:bg-blue-700 focus:ring-blue-500' } focus:outline-none focus:ring-2 focus:ring-offset-2" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Feature Comparison -->
      <div class="mt-16">
        <div class="bg-gray-50 rounded-lg p-8">
          <h3 class="text-xl font-bold text-gray-900 text-center mb-8">What's included with Pro</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-900">Unlimited Resumes</h4>
              <p class="text-gray-600 text-sm mt-2">Optimize as many resumes as you need with our advanced AI</p>
            </div>

            <div class="text-center">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-900">Unlimited Cover Letters</h4>
              <p class="text-gray-600 text-sm mt-2">Generate personalized cover letters for every application</p>
            </div>

            <div class="text-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-900">ATS Optimization</h4>
              <p class="text-gray-600 text-sm mt-2">Beat applicant tracking systems with keyword optimization</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Back Link -->
      <div class="mt-8 text-center">
        <%= link_to billing_index_path, class: "text-gray-600 hover:text-gray-900" do %>
          ‚Üê Back to Billing
        <% end %>
      </div>
    </div>
  </main>
</div>
