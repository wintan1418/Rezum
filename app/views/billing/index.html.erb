<div class="min-h-full">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
      <span class="block sm:inline"><%= alert %></span>
    </div>
  <% end %>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="px-4 py-6 sm:px-0">
    <!-- Header -->
    <div class="px-4 py-6 sm:px-0">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Billing & Usage</h1>
          <p class="mt-2 text-gray-600">Manage your subscription, credits, and payment history</p>
        </div>
        
        <div class="flex items-center space-x-3">
          <% if @subscription %>
            <%= link_to subscription_path(@subscription), 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Manage Subscription
            <% end %>
          <% else %>
            <%= link_to new_subscription_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Subscribe Now
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="px-4 sm:px-0">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Current Plan -->
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Current Plan</h3>
            </div>
            
            <div class="px-6 py-6">
              <% if @subscription && @subscription.active? %>
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-xl font-semibold text-gray-900"><%= @subscription.plan_name %></h4>
                    <p class="text-gray-600">$<%= @subscription.plan_price %> per <%= @subscription.billing_cycle %></p>
                    
                    <div class="mt-3 flex items-center space-x-4 text-sm">
                      <div class="flex items-center">
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                          <%= @subscription.active? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                          <%= @subscription.status.humanize %>
                        </span>
                      </div>
                      
                      <% if @subscription.cancel_at_period_end? %>
                        <span class="text-orange-600 font-medium">Cancels on <%= @subscription.current_period_end.strftime("%B %d, %Y") %></span>
                      <% else %>
                        <span class="text-gray-500">Renews on <%= @subscription.current_period_end.strftime("%B %d, %Y") %></span>
                      <% end %>
                    </div>
                  </div>
                  
                  <div class="text-right">
                    <div class="text-3xl font-bold text-green-600">∞</div>
                    <p class="text-sm text-gray-500">Unlimited usage</p>
                  </div>
                </div>
                
                <% if @subscription.trialing? %>
                  <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                      </svg>
                      <div>
                        <p class="text-sm font-medium text-blue-800">Trial Active</p>
                        <p class="text-xs text-blue-600">Your trial ends on <%= @subscription.trial_end.strftime("%B %d, %Y") %></p>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <!-- Free Plan -->
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-xl font-semibold text-gray-900">Free Plan</h4>
                    <p class="text-gray-600">Pay-per-use credits</p>
                    
                    <div class="mt-3">
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        Free Tier
                      </span>
                    </div>
                  </div>
                  
                  <div class="text-right">
                    <div class="text-3xl font-bold <%= @credits_remaining > 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= @credits_remaining %>
                    </div>
                    <p class="text-sm text-gray-500">Credits remaining</p>
                  </div>
                </div>
                
                <div class="mt-6 p-4 bg-purple-50 border border-purple-200 rounded-lg">
                  <h5 class="text-sm font-medium text-purple-800 mb-2">Upgrade to Pro for unlimited usage</h5>
                  <div class="flex items-center justify-between">
                    <div class="text-xs text-purple-600">
                      <p>✓ Unlimited resumes & cover letters</p>
                      <p>✓ Priority AI processing</p>
                      <p>✓ Advanced ATS optimization</p>
                    </div>
                    <%= link_to new_subscription_path, 
                        class: "ml-4 inline-flex items-center px-3 py-2 border border-transparent text-xs font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" do %>
                      Upgrade Now
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Purchase Credits (if not subscribed) -->
          <% unless @subscription && @subscription.active? %>
            <div class="bg-white shadow rounded-lg">
              <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Purchase Credits</h3>
              </div>
              
              <div class="px-6 py-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <!-- 10 Credits -->
                  <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
                    <div class="text-center">
                      <div class="text-2xl font-bold text-gray-900">10</div>
                      <div class="text-sm text-gray-500 mb-2">Credits</div>
                      <div class="text-lg font-semibold text-blue-600">$5</div>
                      <div class="text-xs text-gray-500 mb-4">$0.50 per credit</div>
                      
                      <%= form_with url: purchase_credits_billing_index_path, method: :post, local: true, data: { turbo: false } do |f| %>
                        <%= hidden_field_tag :credits, 10 %>
                        <%= f.submit "Purchase", 
                            class: "w-full px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- 35 Credits -->
                  <div class="border-2 border-green-300 rounded-lg p-4 relative bg-green-50">
                    <div class="absolute -top-2 left-1/2 transform -translate-x-1/2">
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-600 text-white">
                        Best Value
                      </span>
                    </div>
                    <div class="text-center">
                      <div class="text-2xl font-bold text-gray-900">35</div>
                      <div class="text-sm text-gray-500 mb-2">Credits</div>
                      <div class="text-lg font-semibold text-green-600">$15</div>
                      <div class="text-xs text-gray-500 mb-4">$0.43 per credit</div>
                      
                      <%= form_with url: purchase_credits_billing_index_path, method: :post, local: true, data: { turbo: false } do |f| %>
                        <%= hidden_field_tag :credits, 35 %>
                        <%= f.submit "Purchase", 
                            class: "w-full px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- 75 Credits -->
                  <div class="border border-gray-200 rounded-lg p-4 hover:border-purple-300 transition-colors">
                    <div class="text-center">
                      <div class="text-2xl font-bold text-gray-900">75</div>
                      <div class="text-sm text-gray-500 mb-2">Credits</div>
                      <div class="text-lg font-semibold text-purple-600">$30</div>
                      <div class="text-xs text-gray-500 mb-4">$0.40 per credit</div>
                      
                      <%= form_with url: purchase_credits_billing_index_path, method: :post, local: true, data: { turbo: false } do |f| %>
                        <%= hidden_field_tag :credits, 75 %>
                        <%= f.submit "Purchase", 
                            class: "w-full px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <div class="mt-4 text-center text-xs text-gray-500">
                  <p>Credits never expire and can be used for resume optimization and cover letter generation</p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Recent Payments -->
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-medium text-gray-900">Recent Payments</h3>
                <%= link_to history_billing_index_path, 
                    class: "text-blue-600 hover:text-blue-500 text-sm font-medium" do %>
                  View All →
                <% end %>
              </div>
            </div>
            
            <% if @payments.any? %>
              <div class="divide-y divide-gray-200">
                <% @payments.each do |payment| %>
                  <div class="px-6 py-4 hover:bg-gray-50">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                          <% if payment.successful? %>
                            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                          <% elsif payment.failed? %>
                            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                            </svg>
                          <% else %>
                            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                            </svg>
                          <% end %>
                        </div>
                        
                        <div>
                          <p class="text-sm font-medium text-gray-900"><%= payment.description_display %></p>
                          <p class="text-xs text-gray-500">
                            <%= payment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                            <% if payment.credits_purchased.present? %>
                              • <%= payment.credits_purchased %> credits
                            <% end %>
                          </p>
                        </div>
                      </div>
                      
                      <div class="text-right">
                        <p class="text-sm font-medium text-gray-900"><%= payment.amount_display %></p>
                        <p class="text-xs <%= case payment.status
                                             when 'succeeded' then 'text-green-600'
                                             when 'canceled' then 'text-red-600'
                                             else 'text-yellow-600'
                                             end %>">
                          <%= payment.status.humanize %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No payments yet</h3>
                <p class="mt-1 text-sm text-gray-500">Your payment history will appear here once you make a purchase.</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Usage Stats -->
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Usage Summary</h3>
            </div>
            
            <div class="px-6 py-4 space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Total Spent</dt>
                <dd class="mt-1 text-2xl font-bold text-gray-900">$<%= @total_spent %></dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Credits Remaining</dt>
                <dd class="mt-1 text-2xl font-bold <%= @credits_remaining > 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= @credits_remaining %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm font-medium text-gray-500">Account Status</dt>
                <dd class="mt-1">
                  <% if @subscription && @subscription.active? %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                      Pro Subscriber
                    </span>
                  <% elsif current_user.trial_active? %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      Trial Active
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      Free User
                    </span>
                  <% end %>
                </dd>
              </div>
              
              <% if @subscription && @subscription.active? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Next Billing</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <%= @subscription.current_period_end.strftime("%B %d, %Y") %>
                    <p class="text-xs text-gray-500">(<%= @subscription.subscription_days_remaining %> days)</p>
                  </dd>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
            </div>
            
            <div class="px-6 py-4 space-y-3">
              <%= link_to history_billing_index_path, 
                  class: "flex items-center text-sm text-gray-700 hover:text-gray-900" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                </svg>
                Payment History
              <% end %>
              
              <% if @subscription && @subscription.active? %>
                <%= link_to subscription_path(@subscription), 
                    class: "flex items-center text-sm text-gray-700 hover:text-gray-900" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Subscription Settings
                <% end %>
              <% else %>
                <%= link_to new_subscription_path, 
                    class: "flex items-center text-sm text-blue-600 hover:text-blue-900" do %>
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                  Upgrade to Pro
                <% end %>
              <% end %>
              
              <%= link_to resumes_path, 
                  class: "flex items-center text-sm text-gray-700 hover:text-gray-900" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Back to Resumes
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>