<% content_for(:page_title) { "Welcome Back" } %>
<% content_for(:page_subtitle) { "Sign in to continue optimizing your career with AI" } %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), 
             html: { class: "space-y-6" }) do |f| %>
  
  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, 
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
        placeholder: "Enter your email",
        autofocus: true,
        autocomplete: "email" %>
  </div>

  <!-- Password -->
  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, 
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors",
        placeholder: "Enter your password",
        autocomplete: "current-password" %>
  </div>

  <!-- Remember Me & Forgot Password -->
  <div class="flex items-center justify-between">
    <% if devise_mapping.rememberable? %>
      <label class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
        <span class="ml-2 text-sm text-gray-600">Remember me</span>
      </label>
    <% end %>
    
    <div>
      <%= link_to "Forgot password?", new_password_path(resource_name), 
          class: "text-sm text-blue-600 hover:text-blue-500 transition-colors" %>
    </div>
  </div>

  <!-- Sign In Button -->
  <div>
    <%= f.submit "Sign In", 
        class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 font-medium text-sm transition-all duration-200 transform hover:scale-[1.02]" %>
  </div>

  <!-- OAuth Options -->
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white text-gray-500">Or continue with</span>
    </div>
  </div>

  <div>
    <%= link_to user_google_oauth2_omniauth_authorize_path, data: { turbo_method: :post },
        class: "w-full inline-flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" do %>
      <svg class="w-5 h-5" viewBox="0 0 24 24">
        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
      <span class="ml-2">Continue with Google</span>
    <% end %>
  </div>
<% end %>

<% content_for(:footer_links) do %>
  <p class="text-center text-sm text-gray-600">
    Don't have an account?
    <%= link_to "Sign up", new_registration_path(resource_name), 
        class: "font-medium text-blue-600 hover:text-blue-500 transition-colors" %>
  </p>
<% end %>
