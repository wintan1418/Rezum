<% if notice %>
  <div class="fixed top-4 right-4 z-50 max-w-sm" data-controller="alert" data-alert-timeout-value="7000">
    <div class="bg-white border border-green-200 text-gray-800 px-4 py-3 rounded-2xl shadow-lg flex items-start gap-3 backdrop-blur-sm">
      <!-- Avatar/Icon -->
      <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center shadow-md">
        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>
      <!-- Message Content -->
      <div class="flex-1 pt-1">
        <p class="text-sm font-medium text-gray-900">Success!</p>
        <p class="text-sm text-gray-600 mt-0.5"><%= notice %></p>
      </div>
      <!-- Close Button -->
      <button type="button" data-action="alert#dismiss" class="flex-shrink-0 text-gray-400 hover:text-gray-600 transition-colors p-1 -mr-1 -mt-1">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    <!-- Chat bubble tail -->
    <div class="absolute -bottom-2 right-6 w-4 h-4 bg-white border-r border-b border-green-200 transform rotate-45"></div>
  </div>
<% end %>

